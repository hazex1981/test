<!-- ヘッダー -->
<div data-role="header" data-position="fixed" data-theme="b"
style="
	width:800px;
    margin-left : auto ; margin-right : auto;
      background:#e6e6fa;
    "
>
  
  <div data-role="navbar">
    <ul>
      <li><%= link_to "エキスパート一覧",:root %></li>
      <li><%= link_to "メッセージ",box_messages_path %></li>
      <li><%= link_to "プロフィール",profile_user_path(@current_user.id) %></li>
    </ul>
  </div>
  
    <div class="partner_info">

      <span style="color: black">エキスパート(</span>
      <span style="color: red"><%= @expert.name  %></span>
      <span style="color: black">)さんとのセッション</span>

    <%= image_tag(@expert.image,
            :size => '65x65',
            :class=>'user_image') %>

            
    <p>
    <% @categorynames = @expert.categories.map{|m| m.name} %>
    
    <% @i=1 %>
    <% @categorynames.each do |name| %>

        <% if( @i<=5) %>
            <span class="expert_tag">
            <%= @i %>
            <%= name %>
            </span>
        <% end %>
        <% @i+=1 %>
    <% end %>
    
    </div>


    <!--価格・ステータス-->
    
    <div class="session_status">
  　<span class="payment">2000円／5メッセージ</span>
  　<p>


    <% if @session && @session.status == 0  %>
       <span class="chat">チャット可</span>
    <% elsif @session && @session.status == 1 %>
        <span class="chat">チャット中</span>
        <% elsif @session && @session.status == 2 %>
        <span class="pass">パス</span>
        <% elsif @session && @session.status == 3 %>
        <span class="pass">終了</span>
        <% end %>


    </div>

</div>

                                
<!-- コンテンツ -->
<div data-role="content"
style="
	width:770px;
    height:600px;
    margin-left : auto ; margin-right : auto;
    background:#e6e6fa;
    "
>

  <p>セッションをスタートできます。</p>









</div>




<!-- フッターー -->
<div data-role="footer" data-position="fixed" data-theme="b"
style="
	width:800px;
    margin-left : auto ; margin-right : auto;
    
    "
>

  <%= form_for @session,:html => {"data-ajax" => "false" } do |form| %> 

    <%= form.hidden_field :user_id %> 
    <%= form.hidden_field :expert_id %> 
    <%= form.hidden_field :thread_id %> 

    <%= text_area_tag 'content' %> 
    <%= form.submit "送信" %> 
  <% end %>
                                                            
</div>
















